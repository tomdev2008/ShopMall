platform :ios, '10.0'
use_frameworks!

target 'ShopMall' do
    pod 'Alamofire', '~> 4.4' #网络请求
    pod 'ImageViewer' #照片浏览
    pod 'Kingfisher', '~> 3.0' #加载图片
    pod 'PermissionScope' #获取权限
    pod 'SwiftyUserDefaults' #保存数据到沙盒
    pod 'Spring', :git => 'https://github.com/MengTo/Spring.git', :branch => 'swift3' #动画
    pod 'KeychainAccess'  #管理钥匙串
    pod 'ChameleonFramework'  #颜色框架
    pod 'SwiftyJSON'   #解析json
    pod 'SnapKit', '~> 3.2.0'  #自动布局
    pod 'FillableLoaders', '~>1.3.0' #hud
    pod 'DGElasticPullToRefresh' #refresh
    
    pod 'MJRefresh'
    pod 'MJExtension'
end
